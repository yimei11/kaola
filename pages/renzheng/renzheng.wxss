page {
  background-color: #F0F0F0;
  font-size: 24rpx;
}
.renzheng .top {
  background-color: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 0;
}
.renzheng .top .img {
  width: 160rpx;
  height: 160rpx;
  background-color: aqua;
}
.renzheng .top .img image {
  width: 100%;
  height: 100%;
}
.renzheng .top .text {
  margin: 20rpx 0;
  color: #000;
}
.renzheng .top .btn {
  padding: 0 60rpx;
}
.renzheng .bottom {
  padding: 20rpx;
}
.renzheng .bottom .title {
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  color: #000;
  font-size: 26rpx;
}
.renzheng .bottom .text {
  font-size: 22rpx;
  color: #aaa;
  line-height: 50rpx;
  letter-spacing: 5rpx;
}
