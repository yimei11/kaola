.login {
  font-size: 24rpx;
  height: 100vh;
  box-sizing: border-box;
  position: relative;
  padding: 0 60rpx;
}
.login .empty {
  height: 200rpx;
}
.login .img {
  height: 120rpx;
  background-color: aqua;
  margin-bottom: 40rpx;
}
.login .img image {
  width: 100%;
  height: 100%;
}
.login .tellogin {
  margin-bottom: 40rpx;
}
.login .wxlogin {
  margin-bottom: 40rpx;
  border: 2rpx solid #ccc;
  background-color: #fff;
}
.login .text {
  text-align: center;
  color: #ccc;
  text-decoration: underline;
}
.login .botton-text {
  width: 100%;
  position: absolute;
  bottom: 40rpx;
  left: 0;
  text-align: center;
}
.login .botton-text text {
  color: blue;
}
.dialog .text {
  padding: 30rpx;
}
